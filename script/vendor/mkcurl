#!/bin/sh
set -ex
version=v0.5.0
name=mkcurl
destdir=include/measurement_kit/vendor/measurement-kit
install -d $destdir
url=https://raw.githubusercontent.com/measurement-kit/$name/$version/$name.h
(
  set -ex
  cd $destdir
  curl -fsSLO $url
)
git add $destdir/$name.h
git commit -am "Vendor measurement-kit/$name@$version"
