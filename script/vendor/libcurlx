#!/bin/sh
set -ex
version=v0.4.0
name=libcurlx
basedir=include/measurement_kit/vendor/$name
rm -rf $basedir
destdir=$basedir/$version
install -d $destdir
url=https://raw.githubusercontent.com/measurement-kit/$name/$version/$name.h
(
  set -ex
  cd $destdir
  curl -fsSLO $url
)
git add $basedir
git commit -am "Vendor measurement-kit/$name@$version"
