#!/bin/sh
set -e

if [ $# -ne 0 ]; then
    echo "usage: $0" 1>&2
    exit 1
fi
REPOROOT=$(cd $(dirname $0)/../../ && pwd -P)
cd $REPOROOT

set -x # Log commands we run

tc qdisc add dev eth0 root netem delay 200ms 10ms
./autogen.sh --cmake
./build/cmake/cmake
make V=0 -j$(nproc)
ctest -j6 --output-on-failure
